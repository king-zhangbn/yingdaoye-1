---
import AppLayout from "@layouts/Layout.astro";
const title = "Not found";
const description = "Sorry, the page you are looking for does not exist.";
---

<style is:inline>
  main,
  header,
  html {
    scroll-behavior: smooth;
    overflow-x: hidden;
    overflow-y: hidden;
  }

  main:not(.home) header {
    display: none;
  }

  nav,
  footer,
  .footer {
    display: none;
    opacity: 0;
  }
</style>

<AppLayout title={title} description={description}>
  <div
    class="flex flex-col items-center justify-center h-screen text-center text-neutral-300"
  >
    <h1 class="font-bold text-4xl mb-4 text-center">404</h1>
    <p class="text-xl font-thin text-center">{description}</p>

    <a
      class="px-4 py-2 mt-4 text-center bg-neutral-800 text-neutral-100 rounded-md cursor-pointer hover:bg-neutral-700 transition duration-200 ease-in-out"
      href="/"
    >
      Go back to home.
    </a>
  </div>
</AppLayout>
